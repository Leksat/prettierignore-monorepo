{
  "name": "prettierignore-monorepo",
  "version": "1.0.0",
  "description": "Generate a single .prettierignore from multiple .gitignore and .prettierignore files in a monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Leksat/prettierignore-monorepo.git"
  },
  "bin": {
    "prettierignore-monorepo": "dist/index.js"
  },
  "main": "dist/lib.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": "24",
    "pnpm": "8.15.9"
  },
  "packageManager": "pnpm@8.15.9",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "test": "tsc --noEmit && vitest run",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "ignore-walk": "^7.0.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.2",
    "@types/ignore-walk": "^4.0.3",
    "@types/node": "^20",
    "prettier": "^3.5.3",
    "release-it": "^19.0.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
}
